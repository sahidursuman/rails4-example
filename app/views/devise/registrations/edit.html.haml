= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put, role: 'form', class: 'form-horizontal'}) do |f|
 .container
  .row
   .col-md-offset-3.col-md-7.round-box.devise
    .modal-header.devise
     %h3.modal-title.devise= t('label.edit_user')
    .modal-body
     = devise_error_messages!
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputUsername1'}= t('label.username')
      .col-md-8
       %p.form-control-static= current_user.username
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputCurrentPassword1'}= t('label.current_password')
      .col-md-8
       = f.password_field :current_password, class: 'form-control', id: 'inputCurrentPassword1', placeholder: t('label.current_password').downcase
       %span.help-block.devise (need current password to confirm changes)
     %hr.devise/
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputEmail1'}= t('label.email')
      .col-md-8
       = f.email_field :email, class: 'form-control', id: 'inputEmail1', placeholder: t('label.email_example').downcase
     - if resource.pending_reconfirmation?
      .help-block.devise
       Currently waiting confirmation for: #{resource.unconfirmed_email}
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputPassword1'}= t('label.new_password')
      .col-md-8
       = f.password_field :password, class: 'form-control', id: 'inputPassword1', placeholder: t('label.new_password').downcase
       %span.help-block.devise (leave blank if you don't want to change it)
     .form-group
      %label.col-md-4.control-label.devise{for: 'inputConfirmPassword1'}= t('label.confirm_new_password')
      .col-md-8
       = f.password_field :password_confirmation, class: 'form-control', id: 'inputConfirmPassword1', placeholder: t('label.confirm_new_password').downcase
     .form-group
      .col-md-offset-4.col-md-8
       %br/
       = f.submit t('button.update'), class: 'btn btn-success'
    .modal-footer.devise
     = render 'devise/shared/links'
- if current_user
 .container
  .row
   .col-md-offset-3.col-md-7.round-box.devise
    .modal-header.devise
     %h3.modal-title.devise= t('label.delete_user')
    .modal-body
     .form-group
      .col-md-12
       %label.devise.normal= t('devise.confirmations.confirm_delete_user')
       = button_to t('button.delete_user', username: current_user.username), registration_path(resource_name),
                   data: {confirm: 'Are you sure?'}, method: :delete, class: 'btn btn-danger'
